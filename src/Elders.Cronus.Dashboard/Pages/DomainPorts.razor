@page "/domain-ports"
@inject AppState App
@inject CronusClient Cronus
@inject IJSRuntime JSRuntime
@inject ILogger<DomainPorts> Log

<h2>Ports</h2>

<div>

    <MudTable Items="@Domain?.Ports" LoadInitialData="true" FilterByColumnName="Name" PageSize="9999" ShowPaging="false" Striped="false" AllowSelection="true" MultiSelection="false" @bind-SelectedItem="@Port" Elevation="3">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>ID</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Id</MudTd>
        </RowTemplate>
    </MudTable>

    <div>
        <div class="mt-8">
            <h3>@Port?.Name Events</h3>
            <MudTable Items="@Port?.Events" LoadInitialData="true" FilterByColumnName="Name" PageSize="9999" ShowPaging="false" Striped="false" AllowSelection="true" Elevation="3">
                <HeaderContent>
                    <MudTh>Name</MudTh>
                    <MudTh>ID</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Name</MudTd>
                    <MudTd><i>@context.Id</i></MudTd>
                    <MudTd>
                        
                    </MudTd>
                </RowTemplate>
            </MudTable>

            @if (Port is not null)
            {
                <MudTextField T="DateTime?" Format="s" Label="After UTC" InputType="InputType.DateTimeLocal" ValueChanged="@OnAfterValueChanged" />
                <MudTextField T="DateTime?" Format="s" Label="Before UTC" InputType="InputType.DateTimeLocal" ValueChanged="@OnBeforeValueChanged" />
                <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.Delete" Color="Color.Success" OnClick="@(async () => await OnRequestAllEvents())">Request all events.</MudButton>
            }

        </div>
    </div>
</div>

@code {
    DomainDto Domain { get; set; }

    DomainPortDto Port { get; set; }

    public DateTimeOffset? After { get; set; }
    public DateTimeOffset? Before { get; set; }

    protected void OnAfterValueChanged(DateTime? dateTime)
    {
        After = new DateTimeOffset(dateTime.Value, TimeSpan.Zero);
    }

    protected void OnBeforeValueChanged(DateTime? dateTime)
    {
        Before = new DateTimeOffset(dateTime.Value, TimeSpan.Zero);
    }

    protected override async Task OnInitializedAsync()
    {
        Domain = await Cronus.GetDomainAsync(App.Connection);
        this.StateHasChanged();
    }

    protected async Task OnRequestAllEvents()
    {
        Log.LogInformation("OnRequestAllEvents");

        var request = new RequestPortEventsRequest()
        {
            ReplayAfter = After,
            ReplayBefore = Before,
            Tenant= App.Tenant,
            RecipientHandler = Port.Id
        };

        await Cronus.RequestPortEventsAsync(App.Connection, request);

        StateHasChanged();
    }
}
